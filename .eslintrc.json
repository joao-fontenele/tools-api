{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "env": {
    "node": true,
    "mocha": true
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "rules": {
        "prefer-arrow-callback": ["off"],
        "func-names": ["off"],
        "no-unused-expressions": ["off"]
      },
      "globals": {
        "sinon": true,
        "expect": true
      }
    }
  ]
}
